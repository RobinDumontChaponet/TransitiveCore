{
	"name": "transitive/core",
	"description": "Very simple MVP (Model - View - Presenter) PHP framework.",
	"keywords": ["framework","mvp","simple","router","model","view","presenter"],
	"license": "MIT",
	"authors": [
		{
			"name": "Robin Dumont-Chaponet",
			"email": "src@dumontchapo.net",
			"homepage": "https://robin.dumontchapo.net",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^7.1",
		"psr/http-message": "^1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~6.4.0",
		"friendsofphp/php-cs-fixer": "^2.10"
    },
	"suggest": {
        "transitive/utils": "sometimes usefull methods and function",
		"nikic/fast-route": "Fast request router for PHP",
		"twig/twig": "The flexible, fast and secure template engine for PHP"
    },
	"autoload": {
		"psr-4": {
			"Transitive\\Core\\": "src/"
		}
	},
    "autoload-dev": {
        "psr-4": {
            "Transitive\\Core\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-text --coverage-clover=coverage.clover",
        "check": "./vendor/bin/php-cs-fixer fix --dry-run",
        "fix": "./vendor/bin/php-cs-fixer fix"
    }
}
